<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="horizontal"
              android:background="@color/person_bg"
              android:weightSum="1">

    <com.lezhian.academiccircle.widget.RoundImageView
        android:id="@+id/iv_headImage"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/app_icon"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical"
        >


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王大伟"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学者"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_be_concerned_count"
            android:layout_toEndOf="@+id/tv_be_concerned_count"/>

        <TextView
            android:id="@+id/tv_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text="@string/concern"
            />

        <TextView
            android:id="@+id/tv_concern_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_concern"
            android:layout_toEndOf="@+id/tv_concern"
            android:layout_toRightOf="@+id/tv_concern"
            android:text="12"/>

        <TextView
            android:id="@+id/tv_be_concerned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_concern"
            android:text="@string/beConcerned"
            />

        <TextView
            android:id="@+id/tv_be_concerned_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_concern_count"
            android:layout_toEndOf="@+id/tv_concern_count"
            android:layout_toRightOf="@+id/tv_concern_count"
            android:text="123"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/relativeLayout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/publish"
            android:textSize="16sp"
            android:id="@+id/tv_publish"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"/>

        <TextView
            android:background="@drawable/bg_rectangle2"
            android:gravity="center"
            android:layout_width="80dp"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="30dp"
            android:text="@string/modifyMessage"
            android:id="@+id/tv_modify_message"
            android:layout_below="@+id/tv_publish"
            android:layout_alignLeft="@+id/tv_publish"
            android:layout_alignStart="@+id/tv_publish"/>

    </RelativeLayout>

</LinearLayout>