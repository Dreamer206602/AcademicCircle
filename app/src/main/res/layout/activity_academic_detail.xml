<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lezhian.academiccircle.activity.AcademicDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_left"
            android:drawableLeft="@mipmap/left_back"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/tv_middle"
            android:text="@string/academicDetail"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_marginRight="20dp"
            android:id="@+id/iv_save"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/tv_left"
            android:layout_toLeftOf="@+id/iv_share"
            android:layout_toStartOf="@+id/iv_share"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:id="@+id/iv_share"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/iv_save"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"/>



        <View
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
    </RelativeLayout>
    <include layout="@layout/flybanner"/>


</LinearLayout>
