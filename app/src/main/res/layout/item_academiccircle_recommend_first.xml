<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lezhian.academiccircle.widget.RoundImageView
                android:id="@+id/iv_headImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/app_icon"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/iv_headImage"
                android:layout_toRightOf="@+id/iv_headImage"
                android:text="王大伟"
                android:textSize="18sp"/>


            <ImageView
                android:id="@+id/iv_delete"
                android:src="@mipmap/delete"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
               />

            <TextView
                android:drawableLeft="@mipmap/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10分钟前"
                android:drawablePadding="5dp"
                android:textColor="@color/purple"
                android:id="@+id/tv_time"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_delete"
                android:layout_toStartOf="@+id/iv_delete"
                android:layout_marginRight="39dp"
                android:layout_marginEnd="39dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image_first"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/app_icon"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_image_second"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/app_icon"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_image_third"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/app_icon"
                android:layout_height="200dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="5dp"
                android:text="2016互联网大会"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="经济圈"
                android:id="@+id/tv_sub_title"
                android:layout_below="@+id/tv_title"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="互联网科技圈"
                android:id="@+id/tv_sub_title2"
                android:layout_alignTop="@+id/tv_sub_title"
                android:layout_alignRight="@+id/tv_title"
                android:layout_alignEnd="@+id/tv_title"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/iv_save"
                android:src="@mipmap/save"
                android:scaleType="centerCrop"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_alignTop="@+id/tv_sub_title2"
                android:layout_toRightOf="@+id/tv_sub_title2"
                android:layout_toEndOf="@+id/tv_sub_title2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1222"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_save_count"
                android:layout_alignTop="@+id/iv_save"
                android:layout_toRightOf="@+id/iv_save"
                android:layout_toEndOf="@+id/iv_save"/>

            <ImageView
                android:src="@mipmap/message2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/iv_message"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/tv_save_count"
                android:layout_toRightOf="@+id/tv_save_count"
                android:layout_toEndOf="@+id/tv_save_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_message_count"
                android:layout_alignBottom="@+id/tv_save_count"
                android:layout_toRightOf="@+id/iv_message"
                android:layout_toEndOf="@+id/iv_message"/>


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>