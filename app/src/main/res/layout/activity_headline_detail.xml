<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include layout="@layout/cmn_share_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ahd_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从互联网泡沫到IPO十一美元，Pandora创始人向你传授成功经验"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ahd_tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果壳网"/>

                <TextView
                    android:id="@+id/ahd_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="04-24 11:20:10"/>

                <TextView
                    android:id="@+id/ahd_tv_readcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="浏览2222"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ahd_rl_show"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ahd_iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/app_icon"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/ahd_tv_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="位于弗罗中达州的一所监狱，里面除了受刑人，更多的是树濑、熊猫、兔子、蜥蜴的等动物，在这所监狱里的受刑人就是保育员，读者找个呀月150值得东西无，在见动物园成语1092难，当时是胃口不昂压圈被困在撤回随按了里问到不卡对面吃羊ujinguuou每一熬到开始有被遗弃，是UI肚饿景物库徐比都排到合开就s-zhengag拒绝了越开越多的动物。"
                android:lineSpacingExtra="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ahd_ll_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/pub_rounded_bg_white_frame_purple_has_selector">

                    <ImageView
                        android:id="@+id/ahd_iv_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_praise"/>

                    <TextView
                        android:id="@+id/ahd_tv_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="122"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/pub_rounded_bg_white_frame_purple_has_selector">

                    <TextView
                        android:id="@+id/ahd_tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="融资"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ahd_ll_related"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="热门头条"
                        android:textSize="17sp"/>
                </LinearLayout>
            </LinearLayout>

            <com.lezhian.academiccircle.widget.NoScrollListView
                android:id="@+id/ahd_slv_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>