<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:background="@color/white"
                                    android:layout_height="270dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lezhian.academiccircle.widget.RoundImageView
                android:id="@+id/iv_headImage"
                android:scaleType="centerCrop"
                android:src="@mipmap/app_icon"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘伯伯"
                android:id="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_headImage"
                android:layout_toEndOf="@+id/iv_headImage"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:text="sssssssssssssssssssssssssss"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:text="啊开始放假看来是打开啦放假看来是你哇额的支持按时爱的撒是adasdasdasdasdasdasd             的阿斯顿收到阿斯顿啊撒是大撒阿斯顿啊阿斯顿sssssssssssssdasdczq wzx asd sa s"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/tv_attachment"
                android:text="附件，2016信息学术报告"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_save"
                android:src="@mipmap/save"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_attachment"
                android:layout_toEndOf="@+id/tv_attachment"
                android:layout_marginLeft="93dp"
                android:layout_marginStart="93dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1222"
                android:textSize="15sp"
                android:id="@+id/tv_save_count"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_save"
                android:layout_toEndOf="@+id/iv_save"/>

            <ImageView
                android:src="@mipmap/message2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_message"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/tv_save_count"
                android:layout_toRightOf="@+id/tv_save_count"
                android:layout_toEndOf="@+id/tv_save_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64"
                android:id="@+id/tv_message_count"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_message"
                android:layout_toEndOf="@+id/iv_message"/>
        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
