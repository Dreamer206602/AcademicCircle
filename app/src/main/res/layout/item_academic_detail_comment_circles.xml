<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:background="@color/white"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@mipmap/u8"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:layout_width="2dp"
                android:layout_marginTop="5dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:text="@string/commentCircles"
                android:id="@+id/tv_comment_circles"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/gray"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lezhian.academiccircle.widget.RoundImageView
                android:id="@+id/iv_headImage"
                android:scaleType="centerCrop"
                android:src="@mipmap/app_icon"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘伯伯"
                android:id="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_headImage"
                android:layout_toEndOf="@+id/iv_headImage"/>

            <TextView
                android:background="@drawable/bg_rectangle"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:text="已关注"
                android:textSize="16sp"
                android:id="@+id/tv_already_concern"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>


        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:text="asdd阿里斯达克类库阿凡达快乐狂蜂浪蝶快乐福克斯的浪费jklsadklfvjkalksdf lsadalksfjklsd AKLFJKSWFJ "
            android:id="@+id/tv_content"
                android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/message2"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="91dp"
                android:layout_marginEnd="91dp"
                android:id="@+id/imageView3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:id="@+id/tv_answer"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignStart="@+id/imageView3"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"/>

        </RelativeLayout>


    </LinearLayout>






</android.support.v7.widget.CardView>