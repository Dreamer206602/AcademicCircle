<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:background="@color/white"
                                    android:layout_marginTop="2dp"
              android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.lezhian.academiccircle.widget.RoundImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:id="@+id/iv_headImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李小白"
        android:textSize="20sp"
        android:id="@+id/tv_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_headImage"
        android:layout_toEndOf="@+id/iv_headImage"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"/>


    <com.lezhian.academiccircle.widget.RippleButtonView
        android:id="@+id/btn_concern"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:background="@drawable/bg_rectangle_concern"
        android:clickable="true"
        android:text="关注"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>