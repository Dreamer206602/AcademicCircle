<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/ihr_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="【资讯】多位网络作家反映，百度贴吧向网友提供大量侵犯版权原创网络文学"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/ihr_tv_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:text="融资"
            android:textSize="16sp"
            android:background="@drawable/pub_rounded_bg_white_frame_purple_no_selector"/>

        <TextView
            android:id="@+id/ihr_tv_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:text="融资"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:background="@drawable/pub_rounded_bg_white_frame_purple_no_selector"/>

        <TextView
            android:id="@+id/ihr_tv_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:text="融资"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:background="@drawable/pub_rounded_bg_white_frame_purple_no_selector"/>
    </LinearLayout>
</LinearLayout>